<h1><%= t_listing_model :role %></h1>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th><%= t_attr_model :role, :name %></th>
        <th colspan="3" class="col-md-1"><%= t('app.actions') %></th>
      </tr>
    </thead>
  
    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= link_to t('app.show'), role %></td>
          <td><%= link_to t('app.edit'), edit_role_path(role) %></td>
          <td><%= link_to t('app.destroy'), role, method: :delete, data: { confirm: t('app.destroy_question') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to t_create_model(:role), new_role_path %>
