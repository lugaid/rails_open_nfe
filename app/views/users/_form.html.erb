<%= simple_form_for @user, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
  
  <%= f.error_notification %>
  <%= f.input :full_name %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.association :roles, label_method: :name %>

  <%= f.button :submit %>

<% end %>
