<h1><%= t_listing_model :user %></h1>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th><%= t_attr_model :user, :email %></th>
        <th><%= t_attr_model :user, :full_name %></th>
        <th colspan="3" class="col-md-1"><%= t('app.actions') %></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.full_name %></td>
          <td><%= link_to t('app.show'), user %></td>
          <td><%= link_to t('app.edit'), edit_user_path(user) %></td>
          <td><%= link_to t('app.destroy'), user, method: :delete, data: { confirm: t('app.destroy_question') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to t_create_model(:user), new_user_path %>
