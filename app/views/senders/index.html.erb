<h1><%= t_listing_model :sender %></h1>

<div class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th><%= t_attr_model :sender, :name %></th>
        <th><%= t_attr_model :sender, :cnpj %></th>
        <th><%= t_attr_model :sender, :certificate %></th>
        <th><%= t_attr_model :sender, :nfe_sender %></th>
        <th colspan="3" class="col-md-1"><%= t('app.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <% @senders.each do |sender| %>
        <tr>
          <td><%= sender.name %></td>
          <td><%= sender.cnpj %></td>
          <td><%= sender.certificate %></td>
          <td><%= sender.nfe_sender %></td>
          <td><%= link_to t('app.show'), sender %></td>
          <td><%= link_to t('app.edit'), edit_sender_path(sender) %></td>
          <td><%= link_to t('app.destroy'), sender, method: :delete, data: { confirm: t('app.destroy_question') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to t_create_model(:sender), new_sender_path %>